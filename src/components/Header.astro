---
import Nav from "./Nav.astro";
---

<div class="background"></div>
<nav>
	<div>
		<a href="/"><img alt="LXBlog" src="/assets/images/logo.png" width={160} height={51} /></a>
	</div>
	<Nav>
		<a href="https://lx862.com">My Home Page</a>
		<a href="/">Blog</a>
		<a href="/about">About</a>
	</Nav>
</nav>

<style>
	nav {
		margin: 1rem 0;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 140px;
		z-index: -1;
		background-image: url("/assets/images/background.png");
		background-size: auto 100%;
		mask-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.2) 30%, rgba(0, 0, 0, 1) 80%);
	}

	nav a {
		color: white;
	}

	@media screen and (max-width: 480px) {
		nav {
			flex-direction: column;
			justify-content: center;
		}
	}
</style>
