---
import Nav from "./Nav.astro";

const links = {
	"Home Page": "https://lx862.com",
	"Blog": "/",
	"About": "/about"
}

---

<nav>
	<div>
		<a href="/"><img class="logo" alt="Amber's Blog" src="/assets/images/logo.png" /></a>
	</div>
	<div class="nav">
		<Nav>
			{Object.entries(links).map((entry) => {
				return <a class={"navlinks " + (entry[1] == Astro.url.pathname ? "selected" : "")} href={entry[1]}>{entry[0]}</a>
			})}
		</Nav>
	</div>
</nav>

<style>
	nav {
		margin: 1rem 0;
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-direction: column;
		gap: 1rem;
		animation: scale-anim 0.5s;
	}

	.logo {
		max-width: 100%;
		max-height: 7.5rem;
		transition: transform 0.4s cubic-bezier(0, 0.55, 0.45, 1);
		margin: 0.5rem;
	}

	.logo:hover {
		transform: scale(1.1) rotateZ(-3deg);
	}

	.selected {
		font-weight: 600;
	}

	.selected::before {
		background-color: var(--background-secondary) !important;
	}

	.navlinks {
		position: relative;
		z-index: 10;
		transition: color 0.2s;
		padding: 0.1rem 0;
		text-decoration: none;
	}

	.navlinks::before, .highlighted::before {
		content: "";
		position: absolute;
		background-color: var(--main-amber);
		top: 0;
		left: 30%;
		right: 30%;
		height: 100%;
		border-radius: 10rem;
		z-index: -1;
	}

	.navlinks::before {
		transition: left 0.2s, right 0.2s, opacity 0.2s;
		opacity: 0;
	}

	.navlinks:hover:before, .selected::before {
		left: -0.5rem;
		right:-0.5rem;
		opacity: 1;
	}

	@keyframes scale-anim {
		0% {
			transform: scale(80%);
		}
		100% {
			transform: none;
		}
	}
</style>
