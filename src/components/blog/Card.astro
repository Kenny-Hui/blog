---
interface Props {
	title: string;
	href: string;
	date?: string;
}

const { href, title, date } = Astro.props;
---

<li class="link-card">
	<div>
		<a href={href}>{title}</a> <span class="date">{date}</span>
		<p>
			<slot />
		</p>
	</div>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.5rem 0.75rem;
		background: linear-gradient(to top, rgba(255,255,255,0.01), rgba(255,255,255,0.025));
		border-radius: 10px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		/* transition: 0.4s margin cubic-bezier(0, 0.55, 0.45, 1); */
	}

	/* .link-card:hover {
		margin: 0 -2rem;
	} */

	div > a {
		font-size: 1.25rem;
		font-weight: 600;
	}
	
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.date {
		margin-left: .5rem;
		font-size: 0.8rem;
		opacity: 0.75;
	}
</style>
