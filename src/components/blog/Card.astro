---
interface Props {
	title: string;
	href: string;
	date?: string;
}

const { href, title, date } = Astro.props;
---

<li class="link-card">
	<div>
		<a href={href}>{title}</a> <span class="date">{date}</span>
		<p>
			<slot />
		</p>
	</div>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.5rem 0.75rem;
		background-color: rgba(255,255,255,0.03);
		border-radius: 12px;
		border: 1px solid rgba(255, 255, 255, 0.15);
	}

	div > a {
		font-size: 1.25rem;
		font-weight: 600;
	}
	
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.date {
		margin-left: .5rem;
		font-size: 0.8rem;
		opacity: 0.75;
	}
</style>
